<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/bd_config_url_et"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Enter discovery url"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/bd_reload_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Reload config"
        android:layout_below="@+id/bd_config_url_et"/>


    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/bd_card_input_et"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@id/bd_reload_btn"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:hint="Enter card input" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/bd_get_cards_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bd_card_input_et"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:text="Get cards"/>

</RelativeLayout>